@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@Darkmode" />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   DisableBackdropClick="true"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Dense="true" Elevation="1">
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@Darkmode"
                             Icon="@Icons.Material.Outlined.DarkMode" Color="@Color.Inherit" Title="Dark Theme"
                             ToggledIcon="@Icons.Material.Rounded.WbSunny" ToggledTitle="Light Theme" />
    </MudAppBar>
    <NavMenu />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public bool Darkmode { get; set; } = true;
}