@using MudBlazor

﻿<MudDrawer @bind-Open="@open" ClipMode="DrawerClipMode.Docked" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
    <MudNavMenu Color="Color.Primary">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/counter" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Counter</MudNavLink>
        <MudNavLink Href="/Items" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Items</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code
{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}