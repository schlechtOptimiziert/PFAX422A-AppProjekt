@page "/"
@inherits BasePage
@using AppProject.Client.Pages.Components;
@using AppProject.Client.Shared;

<div class="d-flex w-90 mx-auto mt-5">
    <MudTextField @bind-Value="searchText" Label="Search" Variant="Variant.Outlined" Clearable="true" Adornment="Adornment.End" AdornmentIcon="" Margin="Margin.Dense" />
    <MudIconButton Icon="@Icons.Material.Filled.Search" OnClick="() => NavigateToList(Platform.All, searchText)" />
</div>

<div style="display:flex; justify-content:space-evenly; margin-top:1rem;">
    <MudButton Variant="Variant.Filled" Class="rounded-circle" OnClick="() => NavigateToList(Platform.PC)">
        <img style="height:3rem; width:2rem;" src="../icons/computer-monitor.svg" />
    </MudButton>
    <MudButton Variant="Variant.Filled" Class="rounded-circle" OnClick="() => NavigateToList(Platform.Playstation)">
        <img style="height:3rem; width:2rem;" src="../icons/playstation.svg" />
    </MudButton>
    <MudButton Variant="Variant.Filled" Class="rounded-circle" OnClick="() => NavigateToList(Platform.Xbox)">
        <img style="height:3rem; width:2rem;" src="../icons/xbox.svg" />
    </MudButton>
    <MudButton Variant="Variant.Filled" Class="rounded-circle" OnClick="() => NavigateToList(Platform.Switch)">
        <img style="height:3rem; width:2rem;" src="../icons/nintendo-switch.svg" />
    </MudButton>
    <MudButton Variant="Variant.Filled" Class="rounded-circle" OnClick="() => NavigateToList(Platform.All)">
        <div style="height:3rem; width:2rem; padding-top:40%; font-weight:700;">All</div>
    </MudButton>
</div>

<HorizontalProductScroller Class="mt-5" Title="Popular Games" Items="items"></HorizontalProductScroller>
<HorizontalProductScroller Class="mt-5" Title="Recommended Games" Items="items"></HorizontalProductScroller>