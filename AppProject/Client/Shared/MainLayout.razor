@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
   <MudAppBar Dense="true" Elevation="1" Color="Color.Primary">
      <MudImage Src="..\Assets\LogoTemp.png" Style="Height:3rem;"></MudImage>
   </MudAppBar>
</MudLayout>
<MudStack Justify="Justify.FlexEnd" Style="height: 100vh">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
    <MudTabs Outlined="true" Centered="true" Position="Position.Bottom" MinimumTabWidth="calc(100vw/3 - 1px)">
        <MudTabPanel Icon="@Icons.Material.Filled.Home" OnClick="@(() => NavigationManager.NavigateTo("/"))" />
        <MudTabPanel Icon="@Icons.Material.Filled.Calculate" OnClick="@(() => NavigationManager.NavigateTo("/counter"))" />
        <MudTabPanel Icon="@Icons.Material.Filled.AutoGraph" OnClick="@(() => NavigationManager.NavigateTo("/fetchdata"))" />
    </MudTabs>
</MudStack>
