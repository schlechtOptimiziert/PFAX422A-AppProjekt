@inherits BaseComponent

<div class="@Class" style="@Style">
    <MudButton Variant="Variant.Text" Class="mt-3 ml-1">
        <p class="h3 my-auto">@Title ></p>
    </MudButton>
    <div class="itemContainer hideScrollbar">
        @foreach (var item in Items)
        {
            <div class="p-2" @onclick="() => NavigateToList(item.Id)">
                <div class="item" style="background-image: url(@item.CoverPictureUri); background-size: cover;" />
                <div style="text-align: center; width: 8rem;">@item.Name</div>
            </div>
        }
    </div>
</div>
