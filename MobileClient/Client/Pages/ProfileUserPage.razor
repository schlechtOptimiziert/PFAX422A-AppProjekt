@page "/profile/user"
@inherits BasePage

<AuthorizeView>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
    <Authorized>
        <h3>E-Mail: @context.User.Identity?.Name</h3>
        <MudButton Href="/Identity/Account/Manage/ChangePassword">Change Password</MudButton>
    </Authorized>
</AuthorizeView>